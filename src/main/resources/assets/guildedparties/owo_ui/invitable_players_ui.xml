<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <templates>
        <template name="player-element">
            <flow-layout direction="horizontal">
                <children>
                    <label>
                        <text>{{username}}</text>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="content">1</horizontal>
                        </sizing>

                        <vertical-text-alignment>center</vertical-text-alignment>
                        <horizontal-text-alignment>left</horizontal-text-alignment>

                        <positioning type="relative">0,50</positioning>
                    </label>

                    <button id="invite-button">
                        <text translate="true">gui.guildedparties.invite_button</text>

                        <sizing>
                            <vertical method="fill">100</vertical>
                            <horizontal method="fill">20</horizontal>
                        </sizing>

                        <positioning type="relative">80,0</positioning>
                    </button>
                </children>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                    <vertical method="fill">10</vertical>
                </sizing>
            </flow-layout>
        </template>
    </templates>
</owo-ui>
