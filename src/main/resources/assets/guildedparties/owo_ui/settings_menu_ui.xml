<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <scroll direction="vertical">
                    <flow-layout direction="vertical">
                        <children>
                            <label>
                                <text translate="true">gui.guildedparties.is_guild_private</text>

                                <margins>
                                    <bottom>5</bottom>
                                </margins>
                            </label>

                            <small-checkbox id="is-private-checkbox">
                                <sizing>
                                    <horizontal method="content">1</horizontal>
                                    <vertical method="content">1</vertical>
                                </sizing>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </small-checkbox>

                            <label>
                                <text translate="true">gui.guildedparties.manage_player_rank_priority</text>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </label>

                            <discrete-slider id="player-rank-priority-slider" min="1" max="50">
                                <sizing>
                                    <vertical method="fill">10</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </discrete-slider>

                            <label>
                                <text translate="true">gui.guildedparties.manage_player_priority</text>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </label>

                            <discrete-slider id="manage-player-priority-slider" min="1" max="50">
                                <sizing>
                                    <vertical method="fill">10</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </discrete-slider>

                            <label>
                                <text translate="true">gui.guildedparties.manage_guild_priority</text>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </label>

                            <discrete-slider id="manage-guild-priority-slider" min="1" max="50">
                                <sizing>
                                    <vertical method="fill">10</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </discrete-slider>

                            <label>
                                <text translate="true">gui.guildedparties.invite_players_priority</text>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </label>

                            <discrete-slider id="invite-players-priority-slider" min="1" max="50">
                                <sizing>
                                    <vertical method="fill">10</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <margins>
                                    <top>5</top>
                                    <bottom>5</bottom>
                                </margins>
                            </discrete-slider>

                            <button id="confirm-button">
                                <text translate="true">gui.guildedparties.confirm</text>

                                <margins>
                                    <top>5</top>
                                </margins>

                                <positioning type="relative">100,0</positioning>
                            </button>
                        </children>

                        <padding>
                            <all>5</all>
                        </padding>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="content">1</horizontal>
                        </sizing>

                        <surface>
                            <panel dark="false"/>
                        </surface>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">100</vertical>
                        <horizontal method="fill">50</horizontal>
                    </sizing>

                    <positioning type="relative">50,0</positioning>

                    <allow-overflow>true</allow-overflow>
                </scroll>
            </children>

            <surface>
                <vanilla-translucent/>
            </surface>

            <sizing>
                <vertical method="fill">100</vertical>
                <horizontal method="fill">100</horizontal>
            </sizing>

            <allow-overflow>true</allow-overflow>
        </flow-layout>
    </components>
</owo-ui>
