<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <label>
                    <text translate="true">gui.guildedparties.scroll_down</text>

                    <positioning type="relative">50,5</positioning>
                </label>

                <flow-layout direction="vertical">
                    <children>
                        <scroll direction="vertical">
                            <flow-layout direction="vertical">
                                <children/>

                                <surface>
                                    <panel dark="true"/>
                                </surface>

                                <padding>
                                    <all>2</all>
                                </padding>
                                
                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                    <vertical method="fill">100</vertical>
                                </sizing>
                            </flow-layout>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </scroll>
                    </children>

                    <margins>
                        <right>2</right>
                    </margins>

                    <positioning type="relative">50,50</positioning>

                    <sizing>
                        <vertical method="fill">80</vertical>
                        <horizontal method="fill">50</horizontal>
                    </sizing>

                    <surface>
                        <blur quality="5" size="2"/>
                    </surface>
                </flow-layout>
                
                <button>
                    <text translate="true">gui.guildedparties.join</text>

                    <positioning type="relative">80,12</positioning>

                    <margins>
                        <left>2</left>
                    </margins>

                    <sizing>
                        <horizontal method="content">1</horizontal>
                        <vertical method="content">1</vertical>
                    </sizing>
                </button>
            </children>

            <surface>
                <vanilla-translucent/>
            </surface>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
