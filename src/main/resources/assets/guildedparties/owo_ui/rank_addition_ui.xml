<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <text-box id="rank-name">
                            <text>Name here</text>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>

                            <margins>
                                <bottom>2</bottom>
                            </margins>
                        </text-box>

                        <discrete-slider min="1" max="50" id="rank-priority">
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>

                            <margins>
                                <top>2</top>
                                <bottom>2</bottom>
                            </margins>
                        </discrete-slider>

                        <label>
                            <text translate="true">gui.guildedparties.rank_explanation</text>

                            <margins>
                                <top>2</top>
                                <bottom>2</bottom>
                            </margins>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>
                        </label>

                        <button id="confirm-button">
                            <text translate="true">gui.guildedparties.confirm</text>

                            <margins>
                                <top>2</top>
                            </margins>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>
                        </button>
                    </children>

                    <positioning type="relative">0,50</positioning>

                    <sizing>
                        <vertical method="content">1</vertical>
                        <horizontal method="content">1</horizontal>
                    </sizing>

                    <padding>
                        <all>5</all>
                    </padding>

                    <surface>
                        <panel dark="false"/>
                    </surface>
                </flow-layout>
            </children>
            
            <surface>
                <vanilla-translucent/>
            </surface>
            
            <sizing>
                <vertical method="fill">100</vertical>
                <horizontal method="fill">100</horizontal>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
