<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <button id="back">
                            <text translate="true">gui.guildedparties.back</text>

                            <positioning type="layout">1,0</positioning>

                            <sizing>
                                <vertical method="fill">10</vertical>
                                <horizontal method="fill">10</horizontal>
                            </sizing>

                            <margins>
                                <bottom>4</bottom>
                            </margins>
                        </button>

                        <text-box id="guild-name">
                            <text/>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>

                            <margins>
                                <bottom>2</bottom>
                            </margins>
                        </text-box>

                        <text-box id="leader-rank-name">
                            <text/>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>

                            <margins>
                                <bottom>2</bottom>
                                <top>2</top>
                            </margins>
                        </text-box>

                        <text-area id="description">
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>

                            <max-lines>10</max-lines>
                        </text-area>

                        <button id="confirm-button">
                            <text translate="true">gui.guildedparties.confirm</text>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>

                            <margins>
                                <top>2</top>
                            </margins>
                        </button>
                    </children>

                    <surface>
                        <panel dark="false"/>
                    </surface>

                    <padding>
                        <all>5</all>
                    </padding>

                    <sizing>
                        <vertical method="content">1</vertical>
                        <horizontal method="content">1</horizontal>
                    </sizing>

                    <positioning type="relative">50,50</positioning>
                </flow-layout>
            </children>

            <surface>
                <vanilla-translucent/>
            </surface>

            <sizing>
                <vertical method="fill">100</vertical>
                <horizontal method="fill">100</horizontal>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
