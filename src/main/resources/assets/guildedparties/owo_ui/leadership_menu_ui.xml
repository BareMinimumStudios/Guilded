<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <button id="disband-button">
                            <text translate="true">gui.guildedparties.disband</text>

                            <margins>
                                <bottom>2</bottom>
                            </margins>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fill">50</vertical>
                            </sizing>
                        </button>

                        <button id="step-down-button">
                            <text translate="true">gui.guildedparties.step_down</text>

                            <margins>
                                <top>2</top>
                            </margins>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fill">49</vertical>
                            </sizing>
                        </button>
                    </children>

                    <sizing>
                        <vertical method="fill">70</vertical>
                        <horizontal method="fill">70</horizontal>
                    </sizing>

                    <padding>
                        <all>5</all>
                    </padding>

                    <surface>
                        <panel dark="false"/>
                    </surface>

                    <positioning type="relative">50,50</positioning>
                </flow-layout>
            </children>

            <surface>
                <vanilla-translucent/>
            </surface>

            <sizing>
                <vertical method="fill">100</vertical>
                <horizontal method="fill">100</horizontal>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
