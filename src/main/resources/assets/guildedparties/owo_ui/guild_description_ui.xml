<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
  <components>
    <flow-layout direction="vertical">
      <children>
        <flow-layout direction="vertical">
          <children>
            <label>
              <text translate="true">gui.guildedparties.description</text>

              <positioning type="relative">50,0</positioning>
            </label>

            <scroll direction="vertical">
              <text-area id="description">
                <sizing>
                  <horizontal method="fill">100</horizontal>
                  <vertical method="fill">100</vertical>
                </sizing>
              </text-area>

              <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">60</vertical>
              </sizing>

              <margins>
                <vertical>4</vertical>
              </margins>
              
              <positioning type="relative">0,20</positioning>
            </scroll>

            <button id="confirm-button">
              <text translate="true">gui.guildedparties.confirm</text>

              <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="content">1</vertical>
              </sizing>

              <positioning type="relative">0,100</positioning>
            </button>
          </children>

          <positioning type="relative">50,50</positioning>

          <sizing>
            <horizontal method="fill">60</horizontal>
            <vertical method="fill">60</vertical>
          </sizing>
        </flow-layout>
      </children>
      
      <surface>
        <vanilla-translucent/>
      </surface>
      
      <sizing>
        <vertical method="fill">100</vertical>
        <horizontal method="fill">100</horizontal>
      </sizing>
    </flow-layout>
  </components>
</owo-ui>
