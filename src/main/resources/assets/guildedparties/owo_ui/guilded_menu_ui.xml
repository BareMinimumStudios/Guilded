<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <button id="quick-join">
                            <text translate="true">gui.guildedparties.quick_join</text>

                            <positioning type="relative">0,0</positioning>

                            <sizing>
                                <vertical method="content">1</vertical>
                                <horizontal method="fill">100</horizontal>
                            </sizing>

                            <vertical-alignment>center</vertical-alignment>
                            <horizontal-alignment>center</horizontal-alignment>

                            <margins>
                                <bottom>10</bottom>
                                <right>1</right>
                            </margins>
                        </button>

                        <button id="view-guilds-button">
                            <text translate="true">gui.guildedparties.view_guilds_button</text>

                            <margins>
                                <right>5</right>
                            </margins>

                            <positioning type="relative">0,100</positioning>

                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>top</vertical-alignment>

                            <sizing>
                                <vertical method="fill">40</vertical>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                        </button>
                        <button id="create-guild-button">
                            <text translate="true">gui.guildedparties.create_guild_button</text>

                            <margins>
                                <left>5</left>
                            </margins>

                            <positioning type="relative">100,100</positioning>

                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>bottom</vertical-alignment>

                            <sizing>
                                <vertical method="fill">40</vertical>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                        </button>
                    </children>

                    <sizing>
                        <vertical method="fill">40</vertical>
                        <horizontal method="fill">50</horizontal>
                    </sizing>

                    <surface>
                        <panel dark="false"/>
                    </surface>

                    <padding>
                        <all>4</all>
                    </padding>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>

            <sizing>
                <vertical method="fill">100</vertical>
                <horizontal method="fill">100</horizontal>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
