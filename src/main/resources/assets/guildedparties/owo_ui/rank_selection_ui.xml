<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <templates>
        <template name="rank-element">
            <flow-layout direction="horizontal">
                <children>
                    <button id="select-rank">
                        <text translate="true">gui.guildedparties.select</text>

                        <sizing>
                            <horizontal method="fill">20</horizontal>
                            <vertical method="fill">100</vertical>
                        </sizing>

                        <positioning type="relative">80,0</positioning>

                        <vertical-alignment>center</vertical-alignment>
                        <horizontal-alignment>center</horizontal-alignment>

                        <surface>
                            <vanilla-translucent/>
                        </surface>
                    </button>

                    <label>
                        <text>Name: {{name}}</text>

                        <sizing>
                            <horizontal method="content">1</horizontal>
                            <vertical method="content">1</vertical>
                        </sizing>

                        <positioning type="relative">10,20</positioning>

                        <horizontal-text-alignment>left</horizontal-text-alignment>
                        <vertical-text-alignment>center</vertical-text-alignment>
                    </label>

                    <label>
                        <sizing>
                            <horizontal method="content">1</horizontal>
                            <vertical method="content">1</vertical>
                        </sizing>

                        <text>Priority: {{priority}}</text>

                        <positioning type="relative">10,80</positioning>

                        <horizontal-text-alignment>left</horizontal-text-alignment>
                        <vertical-text-alignment>center</vertical-text-alignment>
                    </label>
                </children>

                <sizing>
                    <vertical method="fill">10</vertical>
                    <horizontal method="fill">100</horizontal>
                </sizing>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>top</vertical-alignment>
            </flow-layout>
        </template>
    </templates>
</owo-ui>
