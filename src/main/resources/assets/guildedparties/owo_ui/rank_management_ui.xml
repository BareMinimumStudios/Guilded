<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <button id="add-rank">
                            <text translate="true">gui.guildedparties.add</text>

                            <margins>
                                <bottom>5</bottom>
                            </margins>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>
                        </button>

                        <button id="remove-rank">
                            <text translate="true">gui.guildedparties.remove</text>

                            <margins>
                                <top>5</top>
                                <bottom>5</bottom>
                            </margins>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>
                        </button>

                        <button id="modify-rank">
                            <text translate="true">gui.guildedparties.modify</text>

                            <margins>
                                <top>5</top>
                            </margins>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>
                        </button>
                    </children>

                    <padding>
                        <all>5</all>
                    </padding>

                    <sizing>
                        <vertical method="content">1</vertical>
                        <horizontal method="fill">80</horizontal>
                    </sizing>

                    <surface>
                        <panel dark="false"/>
                    </surface>

                    <positioning type="relative">50,50</positioning>
                </flow-layout>
            </children>

            <surface>
                <vanilla-translucent/>
            </surface>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
