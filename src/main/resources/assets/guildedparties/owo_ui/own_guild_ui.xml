<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <templates>
        <template name="guild-description">
            <flow-layout direction="vertical">
                <children>
                    <label>
                        <text>Guild: {{guild-name}}</text>

                        <vertical-text-alignment>center</vertical-text-alignment>
                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <positioning type="relative">0,0</positioning>

                        <color>black</color>
                    </label>

                    <label>
                        <text>Rank: {{your-rank}}</text>

                        <color>black</color>

                        <vertical-text-alignment>center</vertical-text-alignment>
                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <positioning type="relative">0,10</positioning>
                    </label>

                    <scroll direction="vertical">
                        <label>
                            <text>Description: {{description}}</text>

                            <color>black</color>

                            <vertical-text-alignment>center</vertical-text-alignment>
                            <horizontal-text-alignment>left</horizontal-text-alignment>

                            <positioning type="relative">0,20</positioning>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="content">1</vertical>
                            </sizing>

                            <max-width>200</max-width>
                        </label>

                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="fill">50</vertical>
                        </sizing>
                    </scroll>

                    <button id="leave-button">
                        <text translate="true">gui.guildedparties.leave_button</text>

                        <vertical-alignment>center</vertical-alignment>
                        <horizontal-alignment>center</horizontal-alignment>

                        <margins>
                            <top>5</top>
                        </margins>

                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="content">1</vertical>
                        </sizing>

                        <positioning type="relative">0,85</positioning>
                    </button>

                    <button id="invite-button">
                        <text translate="true">gui.guildedparties.invite_button</text>

                        <vertical-alignment>center</vertical-alignment>
                        <horizontal-alignment>center</horizontal-alignment>

                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="content">1</vertical>
                        </sizing>

                        <positioning type="relative">0,100</positioning>
                    </button>
                </children>

                <positioning type="relative">0,50</positioning>

                <padding>
                    <all>5</all>
                </padding>

                <sizing>
                    <horizontal method="fill">50</horizontal>
                    <vertical method="fill">100</vertical>
                </sizing>

                <vertical-alignment>center</vertical-alignment>
                <horizontal-alignment>left</horizontal-alignment>

                <surface>
                    <panel dark="false"/>
                </surface>
            </flow-layout>
        </template>



        <template name="guildmate-element">
            <flow-layout direction="horizontal">
                <children>
                    <label>
                        <text>{{guildmate-name}}</text>

                        <horizontal-text-alignment>left</horizontal-text-alignment>
                        <vertical-text-alignment>center</vertical-text-alignment>

                        <color>black</color>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="content">1</horizontal>
                        </sizing>

                        <positioning type="relative">2,40</positioning>
                    </label>

                    <label>
                        <text>Rank: {{guildmate-rank}}</text>

                        <horizontal-text-alignment>left</horizontal-text-alignment>
                        <vertical-text-alignment>center</vertical-text-alignment>

                        <color>black</color>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="content">1</horizontal>
                        </sizing>
                        <positioning type="relative">2,65</positioning>
                    </label>

                    <button id="view-guildmate-button">
                        <text translate="true">gui.guildedparties.view_button</text>

                        <padding>
                            <all>5</all>
                            <left>5</left>
                            <right>5</right>
                        </padding>

                        <vertical-alignment>center</vertical-alignment>
                        <horizontal-alignment>right</horizontal-alignment>

                        <sizing>
                            <horizontal method="content">1</horizontal>
                            <vertical method="fill">100</vertical>
                        </sizing>

                        <positioning type="relative">100,50</positioning>

                    </button>
                </children>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                    <vertical method="fill">50</vertical>
                </sizing>

                <surface>
                    <panel dark="false"/>
                </surface>
            </flow-layout>
        </template>

        <template name="guild-settings">
            <flow-layout direction="vertical">
                <children>
                    <button id="settings-button">
                        <margins>
                            <left>1</left>
                            <right>1</right>
                        </margins>

                        <text translate="true">gui.guildedparties.settings_button</text>

                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="fill">40</vertical>
                        </sizing>
                    </button>

                    <button id="management-button">
                        <text translate="true">gui.guildedparties.management_button</text>

                        <margins>
                            <left>1</left>
                            <right>1</right>
                        </margins>

                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="fill">40</vertical>
                        </sizing>
                    </button>

                    <label>
                        <text translate="true">gui.guildedparties.scroll_down_hint</text>

                        <horizontal-text-alignment>center</horizontal-text-alignment>
                        <vertical-text-alignment>bottom</vertical-text-alignment>

                        <color>black</color>

                        <sizing>
                            <horizontal method="content">1</horizontal>
                            <vertical method="content">1</vertical>
                        </sizing>
                    </label>
                </children>

                <padding>
                    <all>5</all>
                </padding>

                <sizing>
                    <horizontal method="fill">50</horizontal>
                    <vertical method="fill">50</vertical>
                </sizing>

                <positioning type="relative">100,0</positioning>

                <surface>
                    <panel dark="false"/>
                </surface>
            </flow-layout>
        </template>
    </templates>
</owo-ui>    