<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <templates>
        <template name="view-guildmate">
            <flow-layout direction="horizontal">
                <children>
                    <label>
                        <text>{{username}}</text>

                        <vertical-text-alignment>center</vertical-text-alignment>
                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="content">1</horizontal>
                        </sizing>

                        <positioning type="relative">0,0</positioning>
                    </label>

                    <label>
                        <text>Rank: {{rank}}</text>

                        <vertical-text-alignment>center</vertical-text-alignment>
                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="content">1</horizontal>
                        </sizing>

                        <positioning type="relative">0,10</positioning>
                    </label>

                    <label>
                        <text>Rank Priority: {{priority}}</text>

                        <vertical-text-alignment>center</vertical-text-alignment>
                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="content">1</horizontal>
                        </sizing>

                        <positioning type="relative">0,20</positioning>
                    </label>

                    <button id="kick-button">
                        <text translate="true">gui.guildedparties.kick_player</text>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="fill">50</horizontal>
                        </sizing>

                        <positioning type="relative">0,80</positioning>
                    </button>

                    <button id="change-rank-button">
                        <text translate="true">gui.guildedparties.change_rank</text>

                        <sizing>
                            <vertical method="content">1</vertical>
                            <horizontal method="fill">100</horizontal>
                        </sizing>

                        <positioning type="relative">0,100</positioning>
                    </button>
                </children>

                <padding>
                    <all>5</all>
                </padding>

                <sizing>
                    <horizontal method="fill">50</horizontal>
                    <vertical method="fill">50</vertical>
                </sizing>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>

                <surface>
                    <panel dark="false"/>
                </surface>
            </flow-layout>
        </template>
    </templates>
</owo-ui>